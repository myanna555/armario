<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.android.gatofalante.armario.activities.CategoryActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/tops_category_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="TOPS"
            android:background="@color/colorPrimary"
            android:textColor="@color/buttonText"
            android:onClick="showTops">
        </Button>

        <Button
            android:id="@+id/bottoms_category_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="BOTTOMS"
            android:background="@color/colorPrimary"
            android:textColor="@color/buttonText"
            android:onClick="showBottoms">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/shoes_category_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="SHOES"
            android:background="@color/colorPrimary"
            android:textColor="@color/buttonText"
            android:onClick="showShoes">
        </Button>

        <Button
            android:id="@+id/accessories_category_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="ACCESSORIES"
            android:background="@color/colorPrimary"
            android:textColor="@color/buttonText"
            android:onClick="showAccessories">
        </Button>
    </LinearLayout>
    </LinearLayout>